Code-1
//Pointers
#include<bits/stdc++.h>
using namespace std;
int main()
{
int a = 10;
int *p = &a;
cout<<*(&a)<<endl; 
cout<<*p<<endl;
cout<<sizeof(p)<<endl;
return 0;
}
